doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Home
    link(rel="stylesheet" href="styles.css")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/js/all.min.js" crossorigin="anonymous")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
    link(href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet")
    link(rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css")

  body
    .parent
      .content
        .row.mx-0.shadow#overall
          .col-md-1.bg-dark.d-flex.flex-column.align-items-center.justify-content-evenly#menu(style="height: 100%")             
              .menu-item.text-center.text-white.my-3#home-btn
                i.fas.fa-home.fa-2x
                p.menu-text Home
              .menu-item.text-center.text-white.my-3#profile
                i.fas.fa-user.fa-2x
                p.menu-text Profile
              .menu-item.text-center.text-white.my-3.p-3#subOrds
                i.fas.fa-users.fa-2x
                p.menu-text Subordinates
              .menu-item.text-center.text-white.my-3#myReport
                i.fas.fa-file-alt.fa-2x
                p.menu-text My Report
              .menu-item.text-center.text-white.my-3#logOut
                i.fas.fa-sign-out-alt.fa-2x(style="cursor: pointer;")
                p.menu-text Logout

          .col-md-11(style="height: 100%;")#right-side         
            .row#sub-right
              .col-md-5.d-flex.flex-column.align-items-center.justify-content-start.mx-auto.py-4#welcomeDiv(style="height: 100%; gap: 2rem; background-color: #D3D3D3")
                #welcome-message
                  p.text-center Welcome,
                  p.text-center#name #{username}
                  input#user-id(type="hidden" value!=userId style="display: none;")
                
                .clock-info
                  p.mb-4.fw-bold.text-center(style="font-size: large; width:80%; margin-bottom: 12px;") Last Clock In Time: 
                    span.clock-space#lastClockIn(style="display: block;")
                  br(style="display: block; height: 1px; background-color: black; width: 80%; margin: 4px auto;")
                  p.fw-bold.text-center(style="font-size: large; width:80%; margin-bottom: 12px;") Last Clock Out Time: 
                    span.clock-space#lastClockOut(style="display: block;")
                
                button#clock-in-btn Clock In

                .comment-box
                  label(for="clock-comment") Add a Comment (Optional):
                  textarea#clock-comment.form-control(style="width: 100%; height: 120px;" placeholder="Give a description of any problems encountered during clock time")

              .col-md-7.bg-light.d-flex.flex-column(style="height: 100%;")
                #locatorDiv.mx-auto.d-flex.justify-content-center.align-items-center(style="height: 70%; width: 100%;")
                  #map(style="height: 90%; width: 90%;")
                
                #locationInfoDiv.p-3(style="height: 30%; width: 100%;")
                  h4#locationInfo.m-3.mx-auto

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
    script(src="https://www.gstatic.com/firebasejs/10.7.0/firebase-app-compat.js")
    script(src="https://www.gstatic.com/firebasejs/10.7.0/firebase-auth-compat.js")
    script(src="https://unpkg.com/leaflet/dist/leaflet.js")
    script(src="./welcome.js")
